{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/(.*\\.(png|jpg|jpeg|ico|webmanifest|json|ttf|woff|woff2))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
} 